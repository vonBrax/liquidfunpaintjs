{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "moduleResolution": "node",
    "rootDir": ".",
    // "outDir": "../dist/",
    "composite": true,
    "declarationMap": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "allowJs": true,
    "types": ["emscripten", "liquidfun", "worker-loader"],
    "typeRoots": ["./node_modules/@mytypes"],
    "baseUrl": ".",
    "paths": {
      "packages/*": ["packages/*"]
    }
  }
}
